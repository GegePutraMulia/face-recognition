FROM python:3.11-slim

WORKDIR /app

# Install OS dependencies yang dibutuhkan untuk build dlib & dependencies lain
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    libopenblas-dev \
    liblapack-dev \
    libx11-dev \
    libgtk-3-dev \
    python3-dev \
    pkg-config \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Salin requirements.txt dulu untuk cache layer yang baik
COPY requirements.txt .

# Install dependencies Python
RUN pip install --no-cache-dir -r requirements.txt

# Salin semua source code aplikasi
COPY . .

# Ekspos port uvicorn standar
EXPOSE 8000

# Jalankan aplikasi FastAPI dengan uvicorn
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
