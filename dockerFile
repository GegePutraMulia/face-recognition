FROM python:3.11-slim

WORKDIR /app

# Install dependencies OS yang dibutuhkan dlib dan face_recognition
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    libopenblas-dev \
    liblapack-dev \
    libx11-dev \
    libgtk-3-dev \
    libboost-python-dev \
    python3-dev \
    pkg-config \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Salin requirements.txt dulu untuk cache pip install
COPY requirements.txt .

# Upgrade pip sebelum install dependencies, dan install paket dari requirements.txt
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Salin seluruh source code setelah install dependencies agar cache layer lebih efisien
COPY . .

EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
