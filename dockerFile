# Pakai Python 3.10 base Debian Bullseye supaya dependency build lengkap dan stabil untuk dlib
FROM python:3.10-bullseye

# Set working directory
WORKDIR /app

# Install semua dependencies system yang diperlukan untuk build dlib + face_recognition
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    libopenblas-dev \
    liblapack-dev \
    libx11-dev \
    libgtk-3-dev \
    python3-dev \
    pkg-config \
    libboost-python-dev \
    wget \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# (Optional) Upgrade pip, setuptools dan wheel agar install python package lancar
RUN pip install --upgrade pip setuptools wheel

# Salin requirements.txt dulu untuk caching layer Docker
COPY requirements.txt .

# Install Python dependencies (termasuk dlib dan face_recognition)
RUN pip install --no-cache-dir -r requirements.txt

# Salin seluruh kode aplikasi
COPY . .

# Expose port untuk uvicorn
EXPOSE 8000

# Jalankan aplikasi dengan uvicorn
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
